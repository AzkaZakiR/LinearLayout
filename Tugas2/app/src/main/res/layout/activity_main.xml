<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elon Musk"
            android:textSize="35dp"
            android:layout_marginLeft="15mm"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@+id/title"
            />

        <EditText
            android:id="@+id/edit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elon Musk"
            android:layout_below="@+id/text1"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@id/edit1"/>

        <EditText
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="California"
            android:layout_below="@id/address"/>

        <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University"
            android:layout_below="@id/edit2"/>

        <EditText
            android:id="@+id/edit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIT"
            android:layout_below="@id/university"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/elon1"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/elon"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/edit3"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/elon2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/elon"
            android:layout_below="@id/edit3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/elon1"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/elon"
            android:layout_below="@id/edit3"
            android:layout_toRightOf="@id/elon2"/>

        <Button
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/elon1"
            android:text="BACK"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/elon1"
            android:layout_toRightOf="@id/back"
            android:layout_marginLeft="10dp"
            android:text="NEXT"/>

    </RelativeLayout>


</RelativeLayout>